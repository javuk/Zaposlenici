<p style="color: green"><%= notice %></p>

<div id="employees">
  <div class="containter">
    <div class="row">
      <div class="col-lg-12">
        <div class="main-box clearfix">
          <div class="table-responsive">
            <table class="table user-list align-middle">
              <thead>
                <tr>
                  <th><span>Fotografija</span></th>
                  <th><span>Ime</span></th>
                  <th><span>Prezime</span></th>
                  <th><span>Spol</span></th>
                  <th><span>Godina rođenja:</span></th>
                  <th>&nbsp</th>
                </tr>
              </thead>

              <tbody>
                <% @employees.each do |employee| %>
                <tr>
                  <td><%= image_tag(employee.image_as_thumbnail)%> </td>
                  <td><%= employee.ime %></td>
                  <td><%= employee.prezime %></td>
                  <td><%= employee.spol %></td>
                  <td><%= employee.godina_rodjenja %></td>
                  <td><%= link_to "Detalji", employee, :class => "btn btn-info" %></td>
                  <td><%= button_to "Otkaz", employee, method: :delete , :class => "btn btn-danger"%></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</div>

 

<%= link_to "Zaposli čovika", new_employee_path, :class => "btn btn-success" %>
